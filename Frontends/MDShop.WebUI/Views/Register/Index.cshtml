@model CreateRegisterDto
@{
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/site2.css" rel="stylesheet">
</head>
<body>
    <div class="login-container">
        <h1>Kayıt Ol</h1>
        <form method="post">
            @if (ViewBag.Errors != null) {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewBag.Errors) {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }

            <input type="text" id="name" asp-for="Name" class="form-control" placeholder="Adınız" required>
            <input type="text" id="surname" asp-for="Surname" class="form-control" placeholder="Soyadınız" required>
            <input type="text" id="fullusername" asp-for="Username" class="form-control" placeholder="Kullanıcı Adınız" required>
            <input type="text" id="email" asp-for="Email" class="form-control" placeholder="Email Adresiniz" required pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}">
            <input type="password" id="password" asp-for="Password" class="form-control" placeholder="Şifreniz" required>
            <input type="password" id="confirmpassword" asp-for="ConfirmPassword" class="form-control" placeholder="Şifreniz Tekrar" required>

            <button type="submit" class="btn btn-primary">Kayıt Ol</button>

            <br /> <br />

            <a href="/Login/Index/">Zaten hesabım var</a>

        </form>

        @* <div class="password-policy mt-3">
        <h6>Parola Gereksinimleri:</h6>
        <ul>
        <li>En az 6 karakter uzunluğunda olmalıdır.</li>
        <li>Bir büyük harf içermelidir (A-Z).</li>
        <li>Bir küçük harf içermelidir (a-z).</li>
        <li>Bir rakam içermelidir (0-9).</li>
        <li>Bir özel karakter içermelidir (!, vb.).</li>
        </ul>
        </div> *@
    </div>
</body>
</html>
