@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<body>
    <style>
        td,th{
            align-content: center;
        }
    </style>
</body>

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürünler Listesi</h4>
                <p>Ürünler ile ilgili işlemleri aşağıdaki tablo üzerinden yapabilirsiniz...</p>

                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Ürün Fiyatı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductPrice</td>
                                    
                                    <td><a href="/Admin/Product/DeleteProduct/@item.ProductID" class="btn btn-danger btn-rounded" onclick="return confirm('@item.ProductName Bu ürünü silmek istediğinize emin misiniz?')">Sil</a></td>
                                    <td><a href="/Admin/Product/UpdateProduct/@item.ProductID" class="btn btn-warning btn-rounded">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <td><a href="/Admin/Product/CreateProduct/" class="btn btn-primary btn-rounded">Yeni Ürün Girişi</a></td>
                </div>
            </div>
        </div>



    </div>
</section>

