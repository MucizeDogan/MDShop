@model UpdateOfferDiscountDto
@{
    ViewData["Title"] = "UpdateOfferDiscount";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>İndirim Teklif Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" asp-for="OfferDiscountId" />

                        <label>İndirim Teklif Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <br />

                        <label>İndirim Teklif Alt Başlığı</label>
                        <input type="text" class="form-control" asp-for="SubTitle" />
                        <br />

                        <label>İndirim Teklif Image Url</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />

                        <label>İndirim Teklif Durumu</label>
                        <div>
                            <input type="radio" asp-for="Status" value="true" checked /> Aktif
                            <input type="radio" asp-for="Status" value="false" style="margin-left: 40px" /> Pasif
                        </div>
                        <br />

                        <label>İndirim Teklif Sırası</label>
                        <input type="number" class="form-control" asp-for="Order" />
                        <br />

                        <button class="btn btn-primary">İndirim Teklif Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

