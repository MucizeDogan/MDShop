@model CreateSpecialOfferDto
@{
    ViewData["Title"] = "CreateSpecialOffer";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Özel Teklif Ekleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <label>Özel Teklif Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <br />

                        <label>Özel Teklif Alt Başlığı</label>
                        <input type="text" class="form-control" asp-for="SubTitle" />
                        <br />

                        <label>Özel Teklif Image Url</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />

                        <label>Özel Teklif Durumu</label>
                        <div>
                            <input type="radio" asp-for="Status" value="true" checked /> Aktif
                            <input type="radio" asp-for="Status" value="false" style="margin-left: 40px" /> Pasif
                        </div>
                        <br />

                        <label>Özel Teklif Sırası</label>
                        <input type="number" class="form-control" asp-for="Order" />
                        @Html.ValidationMessageFor(model => model.Order, "", new { @class = "text-danger" })
                        <br />

                        <button class="btn btn-primary">Özel Teklif Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

